@using System.Collections.Generic
@using System.Linq
@using CoVisiting.Data.Models
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Увійти";
}

<div class="container body-content">

    <div class="row userProfileHeader globalMarginFix_30">
        <div class="userProfileHeading">
            @ViewData["Title"]
        </div>
    </div>

    <div class="row ContainerShadow paddingFix16 globalMarginFix_30">
        <div class="col-lg-12 centered">
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="width50">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Увійти</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword">Забули пароль?</a>
                        </p>
                        <p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Зареєструватися як новий користувач?</a>
                        </p>
                    </div>
                </form>
        </div>
