@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забули пароль?";
}

<div class="container body-content">

    <div class="row userProfileHeader globalMarginFix_30">
        <div class="userProfileHeading">
            @ViewData["Title"]
        </div>
    </div>

    <div class="row ContainerShadow paddingFix16 globalMarginFix_30">
        <div class="col-lg-12 centered">
            <form asp-action="ForgotPassword" method="post" class="width50">
                <h4>Введіть вашу електронну пошту</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Підтвердити</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
